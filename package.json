{
  "name": "vite-vue-electron-ts",
  "version": "1.0.0",
  "main": "dist/electron.js",
  "scripts": {
    "build:all": "npm run build:vue && npm run build:electron",
    "dev": "vite",
    "build:vue": "vue-tsc --noEmit && vite build",
    "build:electron": "node script/build.js",
    "test:elec": "electron ./dist/electron.js",
    "dist": "npm run build:all && electron-builder build"
  },
  "dependencies": {
    "vue": "^3.0.5"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@types/electron": "^1.6.10",
    "@types/node": "^14.14.37",
    "@vitejs/plugin-vue": "^1.1.5",
    "@vue/compiler-sfc": "^3.0.5",
    "chalk": "^4.1.0",
    "concurrently": "^6.0.1",
    "dotenv": "^8.2.0",
    "electron-builder": "^22.10.5",
    "minimist": "^1.2.5",
    "rollup-plugin-esbuild": "^3.0.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "typescript": "^4.1.3",
    "vite": "^2.1.3",
    "vue-tsc": "^0.0.8",
    "electron": "^12.0.2"
  },
  "build": {
    "appId": "com.yuzf.app",
    "productName": "超级应用",
    "directories": {
      "output": "app"
    },
    "win":{
      "icon": "",
      "target":[
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "",
      "uninstallerIcon": "",
      "installerHeaderIcon": "",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": false
    }
  }
}
